<view class="container">
    <view class="title">编辑okr</view>
    <view class="view okr_create_view">
        <view class="input_okr_create_view">
            <input type="text" class="input_okr_create" placeholder="输入你的目标" value="okr默认值1"/>
            <button type="default" class="input_button">+</button>
        </view>

        <view class="okr_create_content">
            <input class="input_default_okr" type="text" 
